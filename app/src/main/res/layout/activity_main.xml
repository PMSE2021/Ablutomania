<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:boxedEdges="all"
            tools:ignore="MissingPrefix">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/screen_percentage_15">

                <TextView
                    android:id="@+id/rotationvector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/screen_percentage_05" />

                <TextView
                    android:id="@+id/accelerometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rotationvector"
                    android:layout_marginBottom="@dimen/screen_percentage_05" />

                <TextView
                    android:id="@+id/gyroscope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accelerometer"
                    android:layout_marginBottom="@dimen/screen_percentage_05" />

                <TextView
                    android:id="@+id/magnetometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gyroscope"
                    android:layout_marginBottom="@dimen/screen_percentage_05" />

            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_back_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal|top"
            android:text="@string/btn_back_main"
            android:textSize="24sp"


            />
    </LinearLayout>

</androidx.wear.widget.BoxInsetLayout>