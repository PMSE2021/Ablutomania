<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:padding="@dimen/box_inset_layout_padding"
    android:translationX="0dp"
    android:translationY="0dp"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationX="0dp"
        android:translationY="0dp"
        app:boxedEdges="all"
        tools:ignore="MissingPrefix">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rotationvector"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/accelerometer"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rotationvector" />

            <TextView
                android:id="@+id/gyroscope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_below="@+id/accelerometer" />

            <TextView
                android:id="@+id/magnetometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_below="@+id/gyroscope" />

            <TextView
                android:id="@+id/pressuresensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_below="@+id/magnetometer" />

            <TextView
                android:id="@+id/lightsensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/screen_percentage_05"
                android:layout_below="@+id/pressuresensor" />
        </RelativeLayout>
    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>